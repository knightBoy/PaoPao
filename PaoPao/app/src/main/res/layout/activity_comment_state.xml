<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_state_listitem_bg">

    <!--头部用户信息 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.example.knightboy.doudou.view.CircleImageView
                android:id="@+id/iv_user_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/user"/>
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:text="往事随风"/>
            <ImageView
                android:id="@+id/iv_user_sex"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_girl"/>
        </LinearLayout>

        <!--右边 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/icon_location"/>
            <TextView
                android:id="@+id/tv_user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:textColor="@color/menu_text_normal"
                android:text="武汉"/>
            <TextView
                android:id="@+id/tv_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:textColor="@color/menu_text_normal"
                android:text="19分钟前"/>

        </LinearLayout>
    </RelativeLayout>

    <!--文字区 -->
    <TextView
        android:id="@+id/tv_user_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:textColor="@color/menu_text_normal"
        android:textSize="15sp"
        android:text="@string/state_string"/>

    <!--图片区 -->
    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/state_test"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3"/>

</LinearLayout>